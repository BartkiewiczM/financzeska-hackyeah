<div class="container mx-auto mt-10 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">FAQs</h1>
    <%= link_to 'Go to Chat', root_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <%= form_with model: @faq, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |f| %>
    <div class="mb-4">
      <%= f.label :content, "Question and Answer", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_area :content, placeholder: 'Enter question and answer', class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', onkeydown: 'if(event.keyCode == 13 && !event.shiftKey){this.form.submit();}' %>
    </div>
    <div class="flex items-center justify-between">
      <%= f.submit 'Add FAQ', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
  <% end %>

    <div class="mt-6">
    <% @faqs.each do |faq| %>
      <div class="bg-white p-4 mb-4 rounded shadow">
        <p class="text-gray-700 mb-2"><%= faq.content %></p>
        <%= button_to 'Delete', faq_path(faq), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
      </div>
    <% end %>
  </div>
</div>
