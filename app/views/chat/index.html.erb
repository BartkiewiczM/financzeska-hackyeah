<div data-controller="chat" class="min-h-screen bg-gray-200 flex items-center justify-center py-10 font-roboto">
  <div class="w-full max-w-2xl bg-white p-6 rounded-lg shadow-xl flex flex-col" style="height: 600px;">
    <div data-chat-target="box" class="flex-1 overflow-y-auto space-y-6 mb-4 relative" style="max-height: 500px;">
      <% @messages.each do |message| %>
        <div class="<%= message.from_user ? 'text-right' : 'text-left' %>">
          <span class="inline-block px-4 py-2 rounded-lg shadow-md <%= message.from_user ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-800' %>">
            <%= message.content %>
          </span>
        </div>
      <% end %>
    </div>
    <div class="border-t pt-4 flex items-center">
      <div class="flex flex-col mr-4 space-y-2">
        <label class="flex items-center">
          <input type="checkbox" data-chat-target="institutionsDatabaseCheckbox" value="true" class="mr-2">
          Użyj bazy instytucji
        </label>
        <label class="flex items-center">
          <input type="checkbox" data-chat-target="smogDatabaseCheckbox" value="true" class="mr-2">
          Użyj bazy pogodowej/jakości powietrza
        </label>
      </div>
      <input data-chat-target="input" data-action="keydown->chat#checkForEnter" type="text" class="flex-grow p-2 rounded-lg shadow-md bg-gray-100 mr-2" placeholder="Type a message...">
      <button data-action="click->chat#sendMessage" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Send</button>
    </div>
  </div>
</div>
